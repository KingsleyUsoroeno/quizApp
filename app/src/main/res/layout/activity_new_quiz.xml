<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="techgroup.com.quizapp.NewQuiz">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="bold"
        android:text="@string/page_heading"
        android:textSize="23sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:text="Choose your path"
        android:textSize="20sp"
        android:id="@+id/textView5" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageView"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/circularImageView3"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="34dp"
        android:src="@drawable/color_pencil"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/circularImageView"
        android:layout_below="@+id/circularImageView2"
        android:layout_marginTop="19dp"
        android:text="Art and Design"
        android:textSize="18sp"
        android:id="@+id/textView6" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/circularImageView2"
        android:layout_width="100dp"
        android:layout_height="105dp"
        android:layout_alignStart="@+id/circularImageView4"
        android:layout_alignTop="@+id/circularImageView"
        android:src="@drawable/earth_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/textView4"
        android:text="Science"
        android:textSize="18sp"
        android:id="@+id/textView8" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="150dp"
        android:layout_height="105dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/paper_image"
        android:id="@+id/circularImageView3" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="150dp"
        android:layout_height="105dp"
        android:layout_alignTop="@+id/circularImageView3"
        android:layout_toEndOf="@+id/circularImageView3"
        android:layout_marginLeft="20dp"
        android:src="@drawable/mask_image"
        android:id="@+id/circularImageView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/circularImageView3"
        android:layout_marginStart="18dp"
        android:layout_marginTop="17dp"
        android:text="Literature"
        android:textSize="15sp"
        android:id="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView8"
        android:layout_alignTop="@+id/textView7"
        android:textSize="15sp"
        android:text="Drama" />

</RelativeLayout>
